{
  "version": "2.0",
  "logging": {
    "fileLoggingMode": "debugOnly",
    "logLevel": {
      "Function.HttpFunction": "Information",
      "default": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "Contains(SourceContext, 'Product')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "MSSqlServer",
                "Args": {
                  "connectionString": "user secrets",
                  "sinkOptionsSection": {
                    "tableName": "product_log",
                    "autoCreateSqlTable": true
                  },
                  "columnOptionsSection": {
                    "removeStandardColumns": [ "MessageTemplate", "Properties" ],
                    "additionalColumns": [
                      {
                        "ColumnName": "ProductId",
                        "DataType": "varchar",
                        "AllowNull": true,
                        "DataLength": 50
                      },
                      {
                        "ColumnName": "Status",
                        "DataType": "varchar",
                        "AllowNull": true,
                        "DataLength": 50
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "Contains(SourceContext, 'Order')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "MSSqlServer",
                "Args": {
                  "connectionString": "user secrets",
                  "sinkOptionsSection": {
                    "tableName": "order_log",
                    "autoCreateSqlTable": true
                  },
                  "columnOptionsSection": {
                    "removeStandardColumns": [ "MessageTemplate", "Properties" ],
                    "additionalColumns": [
                      {
                        "ColumnName": "OrderId",
                        "DataType": "varchar",
                        "AllowNull": true,
                        "DataLength": 50
                      },
                      {
                        "ColumnName": "Status",
                        "DataType": "varchar",
                        "AllowNull": true,
                        "DataLength": 50
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "MultipleLogFilesSample"
    }
  }
}